{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":separateMajorReleases",
    ":combinePatchMinorReleases"
  ],
  "enabledManagers": [
    "dockerfile",
    "github-actions",
    "custom.regex"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^nzb-monkey-go/Dockerfile$/"
      ],
      "matchStrings": [
        "ARG STREAMLIT_VERSION=\"(?<currentValue>[\\d.]+)\""
      ],
      "datasourceTemplate": "pypi",
      "depNameTemplate": "streamlit"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^nzb-monkey-go/Dockerfile$/"
      ],
      "matchStrings": [
        "ARG NZB_MONKEY_VERSION=\"(?<currentValue>v?[\\d.]+)\""
      ],
      "depNameTemplate": "Tensai75/nzb-monkey-go",
      "datasourceTemplate": "github-releases",
      "extractVersionTemplate": "^(?<version>v?.*)$"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^mydealz2rss/Dockerfile$/"
      ],
      "matchStrings": [
        "ARG FEEDGEN2_VERSION=\"(?<currentValue>[\\d.]+)\""
      ],
      "datasourceTemplate": "pypi",
      "depNameTemplate": "feedgen2"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/)build\\.yaml$"
      ],
      "matchStrings": [
        "[a-z0-9]+:\\s*(?<depName>[\\w\\.\\-\\/]+):(?<currentValue>[\\w\\.\\-]+)"
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "streamlit"
      ],
      "groupName": "Python streamlit"
    },
    {
      "matchPackageNames": [
        "feedgen2"
      ],
      "groupName": "Python feedgen2"
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "GitHub Actions",
      "automerge": true
    },
    {
      "matchPackageNames": [
        "Tensai75/nzb-monkey-go"
      ],
      "groupName": "NZB-Monkey-Go"
    },
    {
      "matchPackagePrefixes": [
        "ghcr.io/home-assistant/"
      ],
      "groupName": "Home Assistant Base Images"
    }
  ]
}
